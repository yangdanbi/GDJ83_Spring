<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<!--클래스명 변수명 = new 생성자()  -->
		<!-- spring 에서 객체를 나타내는 것 bean -->
		
		<!-- 풀 패키지 명 leftArm 객체 만들기  -->
		<bean class="com.winter.app.robot.LeftArm" id="leftArm"></bean>
		<bean class="com.winter.app.robot.RightArm" id="rightArm"></bean>
		
		<!--기본생성자 = 매개변수가 없는 생성자  -->
		<!-- 매개변수가 있는 생성자 호출  -->
		<bean class="com.winter.app.robot.Wheel" id="wheel">
		<!--인덱스 번호로 매개변수 구분  -->
			<!-- <constructor-arg index="0" value="50"></constructor-arg>
			<constructor-arg index="1" value="LG"></constructor-arg>
			<constructor-arg index="2" value="2"></constructor-arg> -->
			
			<!--데이터 타입으로 매개변수 구분  -->
			<!-- <constructor-arg type="int"></constructor-arg> -->
			
			<constructor-arg name ="size" value="50"></constructor-arg>
			<constructor-arg name ="brand" value="LG"></constructor-arg>
			<constructor-arg name ="count" value="2"></constructor-arg>
			
			
		</bean>
		
		<bean class="com.winter.app.robot.Robot" id="robot">
		<!-- name = settet 의 이름 / 게터세터 불러오기/ ref = 참조-->
		<!--value : primitive type의 값과 String 값  -->
		<!-- age 객체가 만들어질때 20이 들어가서 만들어짐 -->
		<!-- 기본생성자 호출  -->
			<property name="leftArm"  ref="leftArm"></property>
			<property name="rightArm"  ref="rightArm"></property>
			<property name="age" value="20"></property>
			<property name="company" value="DoSan"></property>
			
		</bean>

</beans>
